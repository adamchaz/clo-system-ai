# CLO System Environment Configuration Template
# Copy this file to .env and fill in your specific values

# ==============================================
# ENVIRONMENT SETTINGS
# ==============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL Database
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=clo_dev
POSTGRES_SSL_MODE=prefer
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Database Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# ==============================================
# API SERVER CONFIGURATION
# ==============================================
API_HOST=0.0.0.0
API_PORT=8000
MAX_WORKERS=1
WORKER_TIMEOUT=60
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_here_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000

# ==============================================
# EXTERNAL SERVICE CONFIGURATION
# ==============================================
# Email Service (if needed)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true

# ==============================================
# MONITORING & LOGGING
# ==============================================
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=
LOG_FORMAT=json
LOG_FILE_PATH=logs/clo_system.log

# ==============================================
# QUANTLIB CONFIGURATION
# ==============================================
QUANTLIB_CALENDAR=UnitedStates
QUANTLIB_DAYCOUNT=Actual/360
QUANTLIB_DATE_FORMAT=%Y-%m-%d

# ==============================================
# BUSINESS LOGIC CONFIGURATION
# ==============================================
DEFAULT_ANALYSIS_DATE=2016-03-23
MAX_PORTFOLIO_SIZE=10000
MAX_ASSET_COUNT=5000
CALCULATION_PRECISION=8
ENABLE_PERFORMANCE_FEATURES=true
ENABLE_WATERFALL_CACHING=true