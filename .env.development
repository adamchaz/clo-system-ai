# CLO System Development Environment Configuration

# ==============================================
# ENVIRONMENT SETTINGS
# ==============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=adamchaz
POSTGRES_DB=clo_dev
POSTGRES_SSL_MODE=disable
DATABASE_URL=postgresql://postgres:adamchaz@127.0.0.1:5433/clo_dev

# Database Connection Pool Settings  
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_URL=redis://127.0.0.1:6379

# ==============================================
# API SERVER CONFIGURATION
# ==============================================
API_HOST=0.0.0.0
API_PORT=8000
MAX_WORKERS=1
WORKER_TIMEOUT=60
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=480  # 8 hours for development
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30     # 30 days for development
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_HEADERS=*

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
FRONTEND_URL=http://localhost:3004
API_BASE_URL=http://localhost:8000

# ==============================================
# MONITORING & LOGGING
# ==============================================
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FORMAT=plain
LOG_FILE_PATH=logs/clo_system_dev.log

# ==============================================
# QUANTLIB CONFIGURATION
# ==============================================
QUANTLIB_CALENDAR=UnitedStates
QUANTLIB_DAYCOUNT=Actual/360
QUANTLIB_DATE_FORMAT=%Y-%m-%d

# ==============================================
# BUSINESS LOGIC CONFIGURATION
# ==============================================
DEFAULT_ANALYSIS_DATE=2016-03-23
MAX_PORTFOLIO_SIZE=10000
MAX_ASSET_COUNT=5000
CALCULATION_PRECISION=8
ENABLE_PERFORMANCE_FEATURES=true
ENABLE_WATERFALL_CACHING=false  # Disable caching in development for testing